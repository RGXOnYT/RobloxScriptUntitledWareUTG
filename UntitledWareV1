local Camera = workspace.CurrentCamera

local CONFIG = {
    FlyEnabled = false,
    FlySpeed = 75,
    SpeedEnabled = true,   -- AUTO ON
    TargetSpeed = 42,
    DefaultSpeed = 32,
    InfJump = true,        -- AUTO ON
    Noclip = false,
    HitboxExpand = true,   -- AUTO ON
    TagHighlight = true,   -- AUTO ON
    ESPEnabled = true,     -- AUTO ON
    HitboxMulti = 15,
    Running = true
}

local MyColor = Color3.new(1,1,1)

-- [[ DUCT TAPE & ORBIT SYSTEM ]]
local function createDuctPart(name, size, offset, parent)
    local p = Instance.new("Part")
    p.Name = "DT_"..name; p.Size = size; p.Color = Color3.fromRGB(140, 140, 145); p.Material = Enum.Material.SmoothPlastic
    p.CanCollide = false; p.Massless = true; p.Parent = parent
    local w = Instance.new("Weld", p); w.Part0 = parent; w.Part1 = p; w.C0 = offset
end

local planet = Instance.new("Part")
planet.Size = Vector3.new(0.6, 0.6, 0.6); planet.Color = Color3.fromRGB(200, 200, 205); planet.Material = Enum.Material.Neon
planet.Shape = Enum.PartType.Ball; planet.CanCollide = false; planet.Anchored = true; planet.Parent = workspace
local a0 = Instance.new("Attachment", planet); a0.Position = Vector3.new(0, 0.3, 0)
local a1 = Instance.new("Attachment", planet); a1.Position = Vector3.new(0, -0.3, 0)
local trail = Instance.new("Trail", planet); trail.Attachment0 = a0; trail.Attachment1 = a1
trail.Color = ColorSequence.new(Color3.new(1,1,1)); trail.Lifetime = 0.6; trail.WidthScale = NumberSequence.new(0.5, 0)

local function equipArmor(char)
    local t = char:WaitForChild("Torso", 5) or char:WaitForChild("UpperTorso", 5)
    local h = char:WaitForChild("Head", 5)
    if not t or not h then return end
    createDuctPart("Hat", Vector3.new(1.2, 0.3, 1.2), CFrame.new(0, 0.6, 0), h)
    createDuctPart("Chest", Vector3.new(2.1, 2.1, 1.2), CFrame.new(0, 0, 0), t)
    local ll = char:FindFirstChild("Left Leg") or char:FindFirstChild("LeftLowerLeg")
    local rl = char:FindFirstChild("Right Leg") or char:FindFirstChild("RightLowerLeg")
    if ll then createDuctPart("LBoot", Vector3.new(1.1, 0.6, 1.1), CFrame.new(0, -0.8, 0), ll) end
    if rl then createDuctPart("RBoot", Vector3.new(1.1, 0.6, 1.1), CFrame.new(0, -0.8, 0), rl) end
end
if LocalPlayer.Character then task.spawn(equipArmor, LocalPlayer.Character) end
LocalPlayer.CharacterAdded:Connect(equipArmor)

