TooltipLabel.BackgroundTransparency = 1; TooltipLabel.TextColor3 = Color3.new(1,1,1); TooltipLabel.Font = Enum.Font.FredokaOne; TooltipLabel.TextScaled = true; TooltipLabel.TextWrapped = true

local function createHeader(txt, color)
    local l = Instance.new("TextLabel", MainFrame); l.Size = UDim2.new(0.9, 0, 0, 25); l.BackgroundTransparency = 1
    l.Text = txt; l.TextColor3 = color; l.Font = Enum.Font.FredokaOne; l.TextScaled = true; return l
end
createHeader("UNTITLEDWARE | DUCT TAPE DEITY", Color3.new(1, 1, 0))
createHeader("Status: Loaded & Armed", Color3.new(0, 1, 0))

-- [[ CORE LOGIC LOOP ]]
RunService.RenderStepped:Connect(function(dt)
    if not CONFIG.Running then planet:Destroy() return end
    local rainbow = Color3.fromHSV(tick() % 4 / 4, 0.7, 1)
    MainStroke.Color = rainbow; TooltipStroke.Color = rainbow
    
    local char = LocalPlayer.Character; local root = char and char:FindFirstChild("HumanoidRootPart")
    local hum = char and char:FindFirstChild("Humanoid"); local isChatting = UserInputService:GetFocusedTextBox()
    
    if root then planet.CFrame = root.CFrame * CFrame.new(math.cos(tick()*5)*2.5, 1, math.sin(tick()*5)*2.5) end
    if hum then hum.WalkSpeed = CONFIG.SpeedEnabled and CONFIG.TargetSpeed or CONFIG.DefaultSpeed end
    if CONFIG.InfJump and not isChatting and UserInputService:IsKeyDown(Enum.KeyCode.Space) and hum then hum:ChangeState(3) end
    if CONFIG.Noclip and char then for _,p in pairs(char:GetDescendants()) do if p:IsA("BasePart") then p.CanCollide = false end end end
    
    for _, v in pairs(Players:GetPlayers()) do
        pcall(function()
            if v ~= LocalPlayer and v.Character and v.Character:FindFirstChild("HumanoidRootPart") then
                local hrp = v.Character.HumanoidRootPart; local torso = v.Character:FindFirstChild("Torso") or v.Character:FindFirstChild("UpperTorso")
                local tColor = torso and torso.Color or Color3.new(1,1,1)
                if tColor ~= MyColor and tColor ~= Color3.new(1,1,1) then
                    if CONFIG.HitboxExpand then hrp.Size = Vector3.new(CONFIG.HitboxMulti,CONFIG.HitboxMulti,CONFIG.HitboxMulti); hrp.Transparency = 1; hrp.CanCollide = false end
                    local ehl = v.Character:FindFirstChild("ESP_H") or Instance.new("Highlight", v.Character)
                    ehl.Name = "ESP_H"; ehl.Enabled = CONFIG.ESPEnabled; ehl.FillColor = tColor
                end
            end
        end)
    end
end)

-- [[ BUTTON MAKER ]]
local Buttons = {}
local function makeBtn(text, isToggle, key, desc, callback, color)
    local btn = Instance.new("TextButton", MainFrame); btn.Size = UDim2.new(0.9, 0, 0, 32); btn.Text = text
    btn.Font = Enum.Font.FredokaOne; btn.TextColor3 = Color3.new(1,1,1); btn.TextScaled = true; btn.BackgroundColor3 = color or Color3.fromRGB(100, 40, 40)
    Instance.new("UICorner", btn); if isToggle then Buttons[key] = btn end
    btn.MouseEnter:Connect(function() TooltipLabel.Text = desc; TooltipFrame.Visible = true; TooltipFrame.Position = UDim2.new(0, btn.AbsolutePosition.X + 250, 0, btn.AbsolutePosition.Y) end)
    btn.MouseLeave:Connect(function() TooltipFrame.Visible = false end)
    btn.MouseButton1Click:Connect(function() if isToggle then CONFIG[key] = not CONFIG[key] else callback(btn) end end)
    MainFrame.Size = UDim2.new(0, 240, 0, UIListLayout.AbsoluteContentSize.Y + 15)
end

makeBtn("Fly", true, "FlyEnabled", "Hover flight.")
makeBtn("Speedhack", true, "SpeedEnabled", "Speed bypass.")
makeBtn("ESP", true, "ESPEnabled", "Filtered team ESP.")
makeBtn("Inf Jump", true, "InfJump", "Infinite jumps.")
makeBtn("Noclip", true, "Noclip", "Walk through walls.")
makeBtn("Hitbox Extender", true, "HitboxExpand", "15-stud reach.")
makeBtn("TagHighlight", true, "TagHighlight", "Green range indicator.")
makeBtn("Server Hop", false, nil, "New lobby.", function() end, Color3.fromRGB(60, 60, 150))
makeBtn("Rejoin", false, nil, "Refresh server.", function() TeleportService:TeleportToPlaceInstance(game.PlaceId, game.JobId) end, Color3.fromRGB(60, 150, 60))
makeBtn("Discord", false, nil, "Copy Discord.", function(b) setclipboard("https://discord.gg/VTZGSXZ9Vd"); b.Text = "Copied!" end, Color3.fromRGB(88, 101, 242))
makeBtn("Youtube", false, nil, "Copy YT.", function(b) setclipboard("https://www.youtube.com/@RGX-275"); b.Text = "Copied!" end, Color3.fromRGB(255, 0, 0))
makeBtn("Unload", false, nil, "Kill script.", function() CONFIG.Running = false; ScreenGui:Destroy() end, Color3.fromRGB(30, 30, 30))

-- [[ SYNC COLORS ]]
task.spawn(function() while task.wait(0.5) do for k,v in pairs(Buttons) do v.BackgroundColor3 = CONFIG[k] and Color3.fromRGB(40,100,40) or v.BackgroundColor3 end end end)
